# Set the scene size and camera location 
size 1000 1000
elevation 2 45
camera 0 -3 0.5 0 0 0 0 0 1 30.0

# lights.  A single point and directional light
# Note that your program must support up to 10 lights
light 0.6 0 0.2 0 1 0.6 0 1  
# I do a global transform to move this down a little 
# A good use of matrix stacks and hierarchy 
pushTransform 

# Trees
# Materials first 
  ambient 0.5 0.5 0.5 1 
  diffuse 0.5 0.5 0.5 1
  specular 1 1 1 1
  shininess 10
  pushTransform
	# a global translate and rotate for trees
	translate 0 0 -0.03
	rotate 1 0 0 90
	# Many, many trees...
  	pushTransform
		translate 0 0 -0.02
        	rotate 1 0 0 90 
		translate 0 0 0
		scale 0.15 0.15 0.15
        	tree
  	popTransform
  	pushTransform
		translate 0 0 -0.02
		rotate 1 0 0 90
		translate 2 0 0
		scale 0.1 0.1 0.1
		tree
  	popTransform
  	pushTransform
		ambient 0.2 0.8 0.8 1
		diffuse 0.5 1 1 1
		translate 0 0 -0.02
		rotate 1 0 0 90
		translate -2 0 0
		scale 0.2 0.2 0.2
		tree
  	popTransform
  popTransform

# Floor (white but now with shading)
# Materials first.  We don't change specular and shininess
  ambient 0.3 0.3 0.3 1
  diffuse 1 1 1 1
  shininess 15
  pushTransform
	translate 0 0 -0.1
        scale 50.0 50.0 0.025 
        cube 1.0 
  popTransform

# Character - blue sphere
  ambient 0.5 0.5 0.5 1
  diffuse 0.5 0.5 1 1
  specular 0 1 1 1
  shininess 1
  pushTransform
       	character 0 1 0
  popTransform
  
  
popTransform
