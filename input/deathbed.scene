# Set the scene size and camera location 
size 1000 1000
elevation 2 45
camera 0 -3 0.5 0 0 0 0 0 1 30.0

# lights.  A single point and directional light
# Note that your program must support up to 10 lights
light 0.6 0 0.1 0 0.3 0.3 0.3 1  
light 0 -0.6 0.1 1 0.3 0.3 0.3 1 

# A good use of matrix stacks and hierarchy 
pushTransform 

# Teapot
# Materials first 
  ambient 0.2 0.2 0.2 1 
  diffuse 0.5 0.5 0.5 1
  specular 1 1 1 1
  shininess 100
# Do all object transforms within a push/pop
  pushTransform
	translate 0 0 -0.02
        rotate 1 0 0 90 
	translate 0 0 0
        teapot 0.15
  popTransform
  pushTransform
	translate 0 0 -0.02
	rotate 1 0 0 90
	translate 2 0 0
	teapot 0.15
  popTransform
  pushTransform
	translate 0 0 -0.02
	rotate 1 0 0 90
	translate -2 0 0
	teapot 0.15
  popTransform

# Floor (white but now with shading)
# Materials first.  We don't change specular and shininess
  ambient 0.3 0.3 0.3 1
  diffuse 1 1 1 1
  shininess 1
  pushTransform
	translate 0 0 -0.1
        scale 10.0 10.0 0.025 
        cube 1.0 
  popTransform

#wall, edge of scene
ambient 0.2 0.2 0.2 1
  diffuse 1 1 1 1
  shininess 15
  pushTransform
  translate 1.5 5 0.4
        scale 7.0 0.025 1
        cube 1.0 
  popTransform
  
  #Right wall, looking from the door towards the house
  ambient 0.2 0.2 0.2 1
  diffuse 1 1 1 1
  shininess 15
  pushTransform
  translate 5 2.75 0.4
        scale 0.025 4.5 1
        cube 1.0 
  popTransform
  
  #Left wall, looking from the door towards the house
  ambient 0.2 0.2 0.2 1
  diffuse 1 1 1 1
  shininess 15
  pushTransform
  translate -2 3.25 0.4
        scale 0.025 3.5 1
        cube 1.0 
  popTransform
  
#front of house 1
ambient 0.2 0.2 0.2 1
  diffuse 1 1 1 1
  shininess 15
  pushTransform
  translate 1 1.5 0.4
        scale 6.0 0.025 1
        cube 1.0 
  popTransform
  
#Front Walls

#left front wall
  ambient 0.2 0.2 0.2 1
